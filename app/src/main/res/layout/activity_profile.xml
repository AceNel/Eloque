<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/takePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/edit"
        android:tint="@color/colorPrimary"
        android:foregroundGravity="center_horizontal"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="30dp"
        android:elevation="0dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brian Odida"
        android:textSize="20sp"
        android:layout_marginTop="170dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bryodiiidah@gmail.com"
        android:textSize="20sp"
        android:layout_marginTop="190dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:padding="5dp"/>

        <TextView
            android:id="@+id/textViewSkillsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Skills"
            android:textSize="17sp"
            android:layout_marginTop="230dp"
            android:textColor="#000000"
            android:background="@drawable/card_background"
            android:layout_marginLeft="15dp"
            android:padding="5dp"/>



    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="140sp"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
        android:id="@+id/skillsGridView"
        android:padding="0dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:scrollingCache="false"
        android:layout_marginTop="320sp" >
    </GridView>

    <TextView
        android:id="@+id/textViewSkillsDescriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Description"
        android:textSize="17sp"
        android:layout_marginTop="400dp"
        android:textColor="#000000"
        android:background="@drawable/card_background"
        android:layout_marginLeft="15dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textViewSkillsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/definition"
        android:textSize="17sp"
        android:layout_marginTop="435dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/action_logout"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"/>


</RelativeLayout>