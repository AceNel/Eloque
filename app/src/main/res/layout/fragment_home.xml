<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:padding="1dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".User_Interface.MainActivity"
    tools:showIn="@layout/activity_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:gravity="left"
                    android:padding="4dp"
                    android:text="Connections"
                    android:textColor="	#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="100dp"
                                android:src="@drawable/user4"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="100dp"
                                android:src="@drawable/user1"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_Plusthis"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="-30dp"
                                android:layout_marginTop="100dp"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="75dp"
                                app:cardElevation="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="C"
                                    android:textAlignment="center"
                                    android:textColor="	#ffffff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="-30dp"
                                android:layout_marginTop="100dp"
                                android:src="@drawable/user2"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_imageff"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="-30dp"
                                android:layout_marginTop="100dp"
                                android:src="@drawable/user1"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_imagellkl"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="-30dp"
                                android:layout_marginTop="100dp"
                                android:src="@drawable/user1"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_imagedcccc"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="-30dp"
                                android:layout_marginTop="100dp"
                                android:src="@drawable/user1"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="-30dp"
                                android:layout_marginTop="100dp"
                                android:src="@drawable/user1"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_Plus"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="100dp"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="75dp"
                                app:cardElevation="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="12"
                                    android:textAlignment="center"
                                    android:textColor="	#ffffff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />


                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </FrameLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/viewProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="90dp"
                    android:background="#ffffff"
                    android:src="@drawable/profile"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="262dp"
                    android:layout_marginTop="155dp"
                    android:background="@drawable/card_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Your Profile"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="345dp"
                    android:layout_marginTop="90dp"
                    android:background="#ffffff"
                    android:src="@drawable/word"
                    android:tint="@color/colorPrimary" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="347dp"
                    android:layout_marginTop="155dp"
                    android:background="@drawable/card_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Your  Projects"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/card_background"
                android:gravity="left"
                android:padding="4dp"
                android:text="New Projects"
                android:textColor="	#696969"
                android:textSize="20sp"
                android:textStyle="bold" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Academic"
                            android:textColor="#6fa865"
                            android:textSize="22sp" />


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/doc"
                            android:id="@+id/card_AcademicProject"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_NewResearch"
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Research"
                            android:textColor="#db8a8a"
                            android:textSize="22sp" />


                        <ImageView
                            android:id="@+id/newResearch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/research_doc" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Articles"
                            android:textColor="#65a3a8"
                            android:textSize="22sp" />


                        <ImageView
                            android:id="@+id/newArticles"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/article" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Word Press"
                            android:textColor="#db8abb"
                            android:textSize="20sp" />


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/wordpress"
                            android:id="@+id/newWordPress"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="10dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Images"
                            android:textColor="#a065a8"
                            android:textSize="20sp" />


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/photoshop"
                            android:id="@+id/newImages"/>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/card_background"
                android:gravity="left"
                android:padding="4dp"
                android:text="Saved Projects / Drafts"
                android:textColor="	#696969"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Academic"
                            android:textColor="#6fa865"
                            android:textSize="22sp" />


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/doc"
                            android:id="@+id/savedAcademic"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_Drafts"
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Research"
                            android:textColor="#db8a8a"
                            android:textSize="22sp" />


                        <ImageView
                            android:id="@+id/savedResearch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/research_doc" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_Completed"
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Articles"
                            android:textColor="#65a3a8"
                            android:textSize="22sp" />


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/article"
                            android:id="@+id/savedArticles"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_More"
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Word Press"
                            android:textColor="#db8abb"
                            android:textSize="20sp" />


                        <ImageView
                            android:id="@+id/savedWordPress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/wordpress" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view3"
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="10dp"
                        android:elevation="30dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardElevation="10dp"
                        app:contentPaddingTop="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:elevation="3dp"
                            android:gravity="center_horizontal"
                            android:text="Images"
                            android:textColor="#a065a8"
                            android:textSize="20sp" />


                        <ImageView
                            android:id="@+id/savedImages"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/photoshop" />


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/card_background"
                android:gravity="left"
                android:padding="4dp"
                android:text="In Drafts"
                android:textColor="	#696969"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>